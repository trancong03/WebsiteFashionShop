            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xóa Sản Phẩm" class="btn btn-primary" />
                <a href="@Url.Action("ProductPatial", "Product")" class="btn btn-secondary">Hủy</a>
            </div>
        </div>
    </div>
