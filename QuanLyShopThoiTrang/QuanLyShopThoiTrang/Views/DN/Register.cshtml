@model QuanLyShopThoiTrang.Models.AccountRegister

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="~/Scripts/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="~/JavaScript.js"></script>
    <title>Register</title>
    <style>
        body {
            background-image: url('../../image/banner/images.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            justify-content: center;
            height: 600px
        }
    </style>
</head>
<body>
    <div class="modal fade show" style="padding-right: 15px; display: block;">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="form-box">
                        <div class="form-tab">
                            <ul class="nav nav-pills nav-fill" role="tablist">
                                <li class="nav-item">
                                    <div class="card-header" style="text-align: center; background-color: moccasin; margin: 20px; color: white">Đăng Ký</div>
                                </li>
                            </ul>
                        </div>

                        <div class="tab-pane fade active show" id="register" role="tabpanel" aria-labelledby="register-tab">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label for="username">Họ:</label>
                                                    <input type="text" class="form-control" name="Ho" id="ho">
                                                    @Html.ValidationMessageFor(model => model.Ho, "", new { @class = "text-danger" })

                                                </div>
                                                <div class="col-md-6">
                                                    <label for="username">Tên:</label>
                                                    <input type="text" class="form-control" name="Ten" id="ten">
                                                    @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="email">Email:</label>
                                            <input type="text" class="form-control" name="Email" id="email">
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="phone">Điện thoại:</label>
                                            <input type="text" class="form-control" name="DienThoai" id="phone">
                                            @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="password">Mật khẩu:</label>
                                            <div class="input-group">
                                                <input type="password" class="form-control rounded" name="PassWord" id="password">
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-secondary rounded" type="button" onclick="togglePassword('password')">👁️</button>
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="rePassword">Nhập lại mật khẩu:</label>
                                            <div class="input-group">
                                                <input type="password" class="form-control rounded" name="RePassWord" id="rePassword">
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-secondary rounded" type="button" onclick="togglePassword('rePassword')">👁️</button>
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.RePassWord, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12 text-center">
                                            <input type="submit" value="Đăng ký" class="btn btn-default" onclick="return validateForm()" style="background-color: moccasin; border: none;" />

                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="text-center mt-3">
                                @Html.ActionLink("Tới trang Đăng nhập", "DangNhap")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script>

        function togglePassword(fieldId) {
            var passwordField = document.getElementById(fieldId);
            var passwordType = passwordField.getAttribute("type");

            if (passwordType === "password") {
                passwordField.setAttribute("type", "text");
            } else {
                passwordField.setAttribute("type", "password");
            }
        }
    </script>


</body>
</html>


